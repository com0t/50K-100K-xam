<div class="row insights_widget" id="SectionScanResultsWcf">
	<div class="col-12">
		<div class="card card-scan_results">

			<div class="card-header">
				<h5 class="card-title">
					{{ scan.strings.title }}
					<a data-toggle="collapse"
					   data-target="#MoreInfo-{{ scan.vars.slug }}"
					><span class="dashicons dashicons-info"></span></a>
				</h5>
				<h6 class="card-subtitle text-muted">
					{{ scan.strings.subtitle }}
				</h6>
				<div class="collapse mt-3" id="MoreInfo-{{ scan.vars.slug }}">
					<div class="alert alert-dark">
						{% for line in scan.strings.explanation %}
							<p class="mb-2">{{ line }}</p>
						{% endfor %}
					</div>
				</div>
			</div>

			<div class="card-body">
				<div id="TableScanWcf" class="container-scantable">
					<table id="example" class="display" style="width:100%">
						<thead>
							<tr>
								<th>Name</th>
								<th>Position</th>
								<th>Office</th>
								<th>Extn.</th>
								<th>Start date</th>
								<th>Salary</th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<th>Name</th>
								<th>Position</th>
								<th>Office</th>
								<th>Extn.</th>
								<th>Start date</th>
								<th>Salary</th>
							</tr>
						</tfoot>
    				</table>

				</div>
			</div>

			<div class="card-footer">
				<div class="row">
					<div class="col-sm-6">
						{{ scan.vars.last_scan_at }}
					</div>
					<div class="col-sm-6 text-right">
						<a href="{{ scan.hrefs.options }}"
						   class="btn btn-sm btn-outline-dark">{{ strings.options }} &rarr;</a>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

